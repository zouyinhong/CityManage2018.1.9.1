<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/bg_color_white"
    android:orientation="horizontal" >
    <LinearLayout 
        android:id="@+id/tab_wisdom"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bottom_wisdom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"

          />
        <TextView
            android:id="@+id/bottom_wisdom_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/tab_waitdeal"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bottom_wait_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"

            />
        <TextView
            android:id="@+id/bottom_wait_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_friend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bottom_friend_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"

            />

        <TextView
            android:id="@+id/bottom_friend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_mine"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/bottom_mine_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"

            />
        <TextView
            android:id="@+id/bottom_mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
    </LinearLayout>

</LinearLayout>
