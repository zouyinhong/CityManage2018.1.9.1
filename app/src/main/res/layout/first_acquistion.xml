<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/title_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:paddingTop="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:text="问题采集"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/font_22"

            />


        <!--  <FrameLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"

              >
              <ImageView
                  android:id="@+id/image_actionbar"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@mipmap/g_icon_add_normal"
                  android:layout_gravity="center"
                  android:padding="10dp"
                  />
              <TextView
                  android:id="@+id/tv_actionbar_mark"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:padding="10dp"
                  android:layout_gravity="center"
                  />
          </FrameLayout>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_btn_bg_pressed1"
            android:text="问题采集"
            android:textSize="@dimen/font_13" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_btn_bg1"
            android:text="工作任务"
            android:textSize="@dimen/font_13" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_btn_bg1"
            android:text="风纪督察"
            android:textSize="@dimen/font_13" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/ic_btn_bg1"
            android:text="空间系统"
            android:textSize="@dimen/font_13" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_btn_bg1"
            android:text="统计分析"
            android:textSize="@dimen/font_13" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"


                    android:background="@color/title_blue"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_task_trade_white" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="行业" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"


                    android:background="@color/yellow_page_search_bg"
                    android:orientation="horizontal">
                <Spinner
                    android:id="@+id/sp_hangye"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical" />
</LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"


                    android:background="@color/title_blue"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_task_type_white" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="分类" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"


                    android:background="@color/yellow_page_search_bg"
                    android:orientation="horizontal">
                <Spinner
                    android:id="@+id/sp_fenlei"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical" />
</LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_location"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_red_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="请选择位置" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/icon_add_btn" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"

                android:background="@color/white"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="10dp"

                    android:background="@drawable/context_biankuang"
                    android:hint=" 请输入您的内容..."
                    android:textColor="@color/font_color_gray" />


            </LinearLayout>

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="@mipmap/ic_collect_add" />

            <LinearLayout
                android:id="@+id/layout_caozuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_collect_audio" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="语音"
                        android:textColor="@color/font_color_weight_gray" />
                </LinearLayout>
                <!--  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="10dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:background="@color/white">
                      <ImageView
                          android:id="@+id/img2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:src="@mipmap/g_media_pick_tool_camera_press"/>
                      <TextView
                          android:layout_width="40dp"
                          android:layout_height="30dp"
                          android:text="照相"
                          android:textColor="@color/font_color_weight_gray"
                          android:gravity="center"
                          />
                  </LinearLayout>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_collect_location" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="定位"
                        android:textColor="@color/font_color_weight_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_collect_pic" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="照片"
                        android:textColor="@color/font_color_weight_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_collect_camera" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="视频"
                        android:textColor="@color/font_color_weight_gray" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/ic_btn_bg1"
                android:text="提交"
                android:textSize="@dimen/font_13" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
