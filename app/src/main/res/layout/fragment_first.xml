    <RelativeLayout
        android:id="@+id/slideView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="60dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/myviewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_gonggao_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/gonggaoicon_on"
                android:drawablePadding="@dimen/font_14"
                android:gravity="center_vertical"
                android:text="公告："
                android:textColor="#fff"
                android:textSize="@dimen/font_20" />

            <TextView
                android:id="@+id/tv_gonggao_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_or_padding_10"
                android:gravity="center_vertical"
                android:text="近期因阴雨天气"
                android:textColor="#fff"
                android:textSize="@dimen/font_16" />

            <TextView
                android:id="@+id/tv_gonggao_endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_or_padding_10"
                android:gravity="center_vertical"
                android:text="2017-04-10 14:05"
                android:textColor="#fff"
                android:textSize="@dimen/font_16" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_gonggao_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/font_14"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dotLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_hotpush"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="415dp"
        android:background="@color/font_color_blue"
        android:gravity="center"
        android:text="热点推送"
        android:textColor="@color/white_content_color"
        android:textSize="@dimen/font_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="460dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_hot1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/accent"
            android:text="2016年3月份各区园林办排名" />

        <View
            android:layout_width="3dp"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/btn_hot2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/zhonganlanse"
            android:text="2016年5月份热点问题分析" />

        <View
            android:layout_width="3dp"
            android:layout_height="100dp" />

        <Button
            android:id="@+id/btn_hot3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/title_color_green"
            android:text="2016年7月份各区摊位统计" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:layout_marginTop="245dp"
        android:gravity="center"
        android:numColumns="3" />

    <RelativeLayout
        android:id="@+id/layout_action_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"


        android:background="@color/title_blue"
        android:orientation="horizontal"
       >

        <ImageView
            android:id="@+id/img_leftside"
            android:layout_width="40dp"
            android:layout_height="40dp"
          android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"

            android:src="@mipmap/personnew" />

        <TextView
            android:id="@+id/title_actionbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="首页"

            android:textColor="@color/font_color_white"
            android:textSize="@dimen/font_22" />

        <ImageView
            android:id="@+id/image_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:src="@mipmap/message"
            android:visibility="gone" />
