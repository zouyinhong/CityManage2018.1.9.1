<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/font_14"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_gonggao_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/guanggao"
        android:drawablePadding="@dimen/font_14"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/tv_gonggao_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/tv_gonggao_endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_or_padding_10"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="@dimen/font_16" />

</LinearLayout>
