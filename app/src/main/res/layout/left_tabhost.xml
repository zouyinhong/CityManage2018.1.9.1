<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mytab"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#5b5b5c"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:paddingTop="10dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:text="我的签到"
            android:textColor="@color/font_color_white"
            android:textSize="@dimen/font_22"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            ></TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/widget_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/img_person"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/context_biankuang"
                            android:src="@mipmap/person" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_toRightOf="@+id/img_person"
                            android:text="关宇阳"
                            android:textColor="@color/anlanse"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_qiandao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_person"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/img_person"
                            android:text="今日你已完成签到"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_person"
                            android:layout_toRightOf="@+id/tv_qiandao"

                            android:text="3"
                            android:textColor="@color/red"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/img_person"
                            android:layout_toRightOf="@+id/tv_num"
                            android:text="次"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:background="@color/white"

                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/time_area" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20dp"
                            android:text="星期一         2016-09-19"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:background="@color/white"

                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/baojinghuizong" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20dp"
                            android:text="当前时间"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20dp"
                            android:text="21:30"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:background="@color/white"

                        android:orientation="horizontal">

                        <ImageView

                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20dp"
                            android:background="@mipmap/dingwei" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20dp"
                            android:text="定位地址"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="20dp"
                            android:text="建国街311号"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_15" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_location"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/pluginmap_map_style_3d" />

                    <ImageView
                        android:id="@+id/img_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@mipmap/g_media_pick_tool_camera_press" />

                </LinearLayout>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/exit_daka" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="签到"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"

                            android:layout_marginTop="10dp"

                            android:src="@mipmap/map" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <ImageView
                                android:id="@+id/img_person1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/context_biankuang"
                                android:src="@mipmap/person" />

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_toRightOf="@+id/img_person1"
                                android:text="关宇阳"
                                android:textColor="@color/anlanse"
                                android:textSize="@dimen/font_15" />

                            <TextView
                                android:id="@+id/tv_qiandao1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/img_person1"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/img_person1"
                                android:text="今日你已完成签到"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_15" />

                            <TextView
                                android:id="@+id/tv_num1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/img_person1"
                                android:layout_toRightOf="@+id/tv_qiandao1"

                                android:text="3"
                                android:textColor="@color/red"
                                android:textSize="@dimen/font_18" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/img_person1"
                                android:layout_toRightOf="@+id/tv_num1"
                                android:text="次"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_15" />

                        </RelativeLayout>
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="20dp"
                                    android:background="@color/white"

                                    >
                                    <TextView
                                        android:id="@+id/tv_time1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginLeft="20dp"
                                        android:text="10:47"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_15" />
                                    <TextView
                                        android:id="@+id/tv_location11"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/tv_time1"
                                        android:layout_alignBottom="@+id/tv_time1"
                                        android:layout_marginLeft="50dp"
                                        android:text="建国街311号"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_15" />
                                    <TextView
                                        android:id="@+id/tv_location12"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_below="@+id/tv_location11"
                                        android:layout_alignLeft="@+id/tv_location11"
                                        android:layout_marginTop="10dp"
                                        android:text="建国街311号"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_12" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="90dp"
                                        android:layout_alignLeft="@+id/tv_location11"
                                        android:layout_below="@+id/tv_location12"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/pluginmap_map_style_3d" />


                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="20dp"
                                    android:background="@color/white"

                                    >
                                    <TextView
                                        android:id="@+id/tv_time2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_marginLeft="20dp"
                                        android:text="10:21"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_15" />
                                    <TextView
                                        android:id="@+id/tv_location21"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/tv_time2"
                                        android:layout_alignBottom="@+id/tv_time2"
                                        android:layout_marginLeft="50dp"
                                        android:text="建国街310号"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_15" />
                                    <TextView
                                        android:id="@+id/tv_location22"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_below="@+id/tv_location21"
                                        android:layout_alignLeft="@+id/tv_location21"
                                        android:layout_marginTop="10dp"
                                        android:text="建国街310号"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_12" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="90dp"
                                        android:layout_alignLeft="@+id/tv_location21"
                                        android:layout_below="@+id/tv_location22"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/pluginmap_map_style_3d" />


                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginTop="20dp"
                                    android:background="@color/white"

                                    >
                                    <TextView
                                        android:id="@+id/tv_time3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:text="09:30"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_15" />
                                    <TextView
                                        android:id="@+id/tv_location31"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/tv_time3"
                                        android:layout_alignBottom="@+id/tv_time3"
                                        android:layout_marginLeft="50dp"
                                        android:text="建国街311号"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_15" />
                                    <TextView
                                        android:id="@+id/tv_location32"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:layout_below="@+id/tv_location31"
                                        android:layout_alignLeft="@+id/tv_location31"
                                        android:layout_marginTop="10dp"
                                        android:text="建国街311号"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/font_12" />

                                    <ImageView
                                        android:layout_width="150dp"
                                        android:layout_height="90dp"
                                        android:layout_alignLeft="@+id/tv_location31"
                                        android:layout_below="@+id/tv_location32"
                                        android:layout_marginTop="10dp"
                                        android:background="@mipmap/pluginmap_map_style_3d" />

                                </RelativeLayout>

                            </LinearLayout>

                        </ScrollView>
                    </LinearLayout>

                </LinearLayout>



        </FrameLayout>
    </LinearLayout>
</TabHost>