<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/widget_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"

                android:src="@mipmap/pluginmap_map_style_3d" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/img_person1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/context_biankuang"
                    android:src="@mipmap/person" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/img_person1"
                    android:text="关宇阳"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_qiandao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_person1"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/img_person1"
                    android:text="今日你已完成签到"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />

                <TextView
                    android:id="@+id/tv_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_person1"
                    android:layout_toRightOf="@+id/tv_qiandao1"

                    android:text="3"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:id="@+id/tv_ci1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_person1"
                    android:layout_toRightOf="@+id/tv_num1"
                    android:text="次"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />

            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@color/white"

                >
                <TextView
                    android:id="@+id/tv_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:text="10:47"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />
                <TextView
                    android:id="@+id/tv_location11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_time1"
                    android:layout_alignBottom="@+id/tv_time1"
                    android:layout_marginLeft="50dp"
                    android:text="建国街311号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />
                <TextView
                    android:id="@+id/tv_location12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/tv_location11"
                    android:layout_alignLeft="@+id/tv_location11"
                    android:layout_marginTop="10dp"
                    android:text="建国街311号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_12" />

                <ImageView
                    android:id="@+id/img_location1"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_alignLeft="@+id/tv_location11"
                    android:layout_below="@+id/tv_location12"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/pluginmap_map_style_3d" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@color/white"

                >
                <TextView
                    android:id="@+id/tv_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:text="10:47"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />
                <TextView
                    android:id="@+id/tv_location21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_time2"
                    android:layout_alignBottom="@+id/tv_time2"
                    android:layout_marginLeft="50dp"
                    android:text="建国街311号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />
                <TextView
                    android:id="@+id/tv_location22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/tv_location21"
                    android:layout_alignLeft="@+id/tv_location21"
                    android:layout_marginTop="10dp"
                    android:text="建国街311号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_12" />

                <ImageView
                    android:id="@+id/img_location2"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_alignLeft="@+id/tv_location21"
                    android:layout_below="@+id/tv_location22"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/pluginmap_map_style_3d" />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@color/white"

                >
                <TextView
                    android:id="@+id/tv_time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="20dp"
                    android:text="10:47"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />
                <TextView
                    android:id="@+id/tv_location31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_time3"
                    android:layout_alignBottom="@+id/tv_time3"
                    android:layout_marginLeft="50dp"
                    android:text="建国街311号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_15" />
                <TextView
                    android:id="@+id/tv_location32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_below="@+id/tv_location31"
                    android:layout_alignLeft="@+id/tv_location31"
                    android:layout_marginTop="10dp"
                    android:text="建国街311号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_12" />

                <ImageView
                    android:id="@+id/img_location3"
                    android:layout_width="150dp"
                    android:layout_height="90dp"
                    android:layout_alignLeft="@+id/tv_location31"
                    android:layout_below="@+id/tv_location32"
                    android:layout_marginTop="10dp"
                    android:background="@mipmap/pluginmap_map_style_3d" />


            </RelativeLayout>

</LinearLayout>

</ScrollView>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>
